<h1>Task</h1>

<div class="card <%= 'border-danger' if @task.urgent? %>">
  <p class="ms-2">
    <strong>Title:</strong>
    <%= @task.title %>
  </p>

  <p class="ms-2">
    <strong>Description:</strong>
    <%= @task.description %>
  </p>

  <p class="ms-2">
    <strong>Completed:</strong>
    <%= @task.completed ? 'SÃ­' : 'No' %>
  </p>

  <p class="ms-2">
    <strong>Deadline:</strong>
    <%= @task.deadline %>
    <% if @task.urgent? %>
      <span class="badge bg-danger me-2 float-end">You have less than 24 hours until this task expires!</span>
      <i class="fas fa-clock text-danger"></i>
    <% end %>
  </p>
</div>

