<h1>Your Tasks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th class="px-3">Accions</th>
      <th class="ps-3">Deadline</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <div class='container'>
      <tr>
        <td class="pe-4 mb-2"><%= task.title %></td>
        <td class="pe-5 mb-2"><%= task.description %></td>
        <td class="px-3 mb-2"><%= task.completed ? 'Complete' : 'Pending' %></td>
        <td class="px-3 mb-2"><%= task.deadline %></td>
        <td type="button" class="px-2 mx-2 btn-sm mb-2 btn btn-success"><%= link_to 'Show', task, class: "button-as-link" %></td> 
        <td type="button" class="px-2 mx-2 btn-sm mb-2 btn btn-success"><%= link_to 'Edit', edit_task_path(task), class: "button-as-link" %></td>
        <td type="button" class="px-2 mx-2 btn-sm mb-2 btn btn-success"><%= button_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" }, class: "button-as-link" %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>

<%= link_to 'New task', new_task_path, type:"button", class:"btn btn-sm btn-success" %>