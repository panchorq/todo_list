<h1>Tareas</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Mostrar', task %> | <%= link_to 'Editar', edit_task_path(task) %> | <%= link_to 'Eliminar', task, method: :delete, data: { confirm: '¿Seguro que quieres eliminar la tarea?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva tarea', new_task_path %>